<div class="row container">

  <%= form_for(invoice) do |f| %>
    <% if invoice.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

        <ul>
        <% invoice.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :date, class: 'col-sm-2 control-label' %>
      <%= f.datetime_select :date %>
    </div>

    <div class="form-group">
      <%= f.label :company, class: 'col-sm-2 control-label'%>
      <%= f.text_field :company %>
    </div>

    <div class="form-group">
      <%= f.label :tax, class: 'col-sm-2 control-label' %>
      <%= f.text_field :tax %>
    </div>

    <div class="form-group">
        <%= f.label :employee_id, class: 'control-label' %>
        <div class="controls">
          <%= collection_select( :invoice, :employee_id, Employee.all, :id, :name, {}, { :multiple => false }) %>
        </div>

    <div class="form-group">
      <%= f.label "Status", class: 'control-label' %>
      <div class="controls">
        <%= f.select(:status_type, options_for_select([['PAID', 'PAID'], ['PENDING', 'PENDING']]), { include_blank: true }) %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Submit", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
